<h1> Hello Admin Categories </h1>
<table class="table">
  <% @categories.each do |category| %>
  <tr>
    <td>
      <%= category.name %>
    </td>
    <td>
      <%= category.description %>
    </td>
    <td>
      <%= link_to "Edit", edit_admin_category_path(category.id), as: category.id %>
    </td>
    <td>
      <%= link_to "Delete", admin_category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>

<td>
  <%= link_to "Create New Category", new_admin_category_path %>
</td>
